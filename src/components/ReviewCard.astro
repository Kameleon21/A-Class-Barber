---
import { Icon } from 'astro-icon/components';

interface Props {
    text: string;
    customerName: string;
    rating: number;
}

const { text, customerName, rating = 5 } = Astro.props;
---

<div class="bg-gray-200 rounded-lg p-6 flex flex-col h-full">
    {/* Review Text */}
    <p class="text-black text-lg italic mb-6 flex-grow">"{text}"</p>

    {/* Star Rating */}
    <div class="flex gap-1 mb-4">
        {Array.from({ length: rating }).map(() => (
            <Icon name="mdi:star" class="w-6 h-6 text-[#FFD700]" />
        ))}
    </div>

    {/* Customer Info */}
    <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center">
            <Icon name="mdi:account" class="w-6 h-6 text-white" />
        </div>
        <div class="flex flex-col">
            <span class="text-black">{customerName}</span>
            <span class="text-gray-600 text-sm">Customer</span>
        </div>
    </div>
</div>
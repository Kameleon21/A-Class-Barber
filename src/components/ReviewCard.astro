---
import { Icon } from 'astro-icon/components';

interface Props {
    authorName: string;
    authorImage: string;
    rating: number;
    text: string;
    date: string;
}

const { text, authorName, authorImage, rating = 5, date } = Astro.props;
---

<div class="bg-gray-200 rounded-lg p-6 flex flex-col h-full">
    {/* Review Text */}
    <p class="text-black text-lg italic mb-6 flex-grow">"{text}"</p>

    {/* Star Rating */}
    <div class="flex gap-1 mb-4">
        {Array.from({ length: 5 }).map((_, index) => (
            <Icon 
                name="mdi:star" 
                class={`w-6 h-6 ${index < rating ? 'text-[#c19d65]' : 'text-gray-400'}`}
            />
        ))}
    </div>

    {/* Author Info */}
    <div class="flex items-center gap-3">
        {authorImage ? (
            <Icon
                name="mdi:account"
                class="w-10 h-10 rounded-full bg-[#c19d65] text-white p-2"
            />
        ) : (
            <div class="w-10 h-10 rounded-full bg-[#c19d65] flex items-center justify-center">
                <Icon name="mdi:account" class="w-6 h-6 text-white" />
            </div>
        )}
        <div class="flex flex-col">
            <span class="text-black font-medium">{authorName}</span>
            <span class="text-gray-600 text-sm">{date}</span>
        </div>
    </div>
</div>
---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import Header from '../components/Header.astro';
---

<Layout title="Contact Us">
    <Header />
    <section class="bg-black text-white pt-32 md:pt-40 pb-20">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-center mb-16">
                <h1 class="text-4xl md:text-5xl font-serif font-extrabold text-center inline-block border-t border-b border-[#c19d65] py-4 px-12">Contact Us</h1>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {/* Contact Details - First on mobile */}
                <div class="order-1 md:order-none space-y-4">
                    <div class="flex items-center gap-4">
                        <Icon name="mdi:map-marker" class="w-6 h-6 text-[#c19d65]" />
                        <span>3 Conduit Ln, Waterford, E91 EY05</span>
                    </div>
                    <div class="flex items-center gap-4">
                        <Icon name="mdi:phone" class="w-6 h-6 text-[#c19d65]" />
                        <a href="tel:083125608" class="hover:text-[#c19d65] transition-colors">083 125 6089</a>
                    </div>
                </div>

                {/* Opening Hours - Second on mobile */}
                <div class="order-2 md:order-none">
                    <h2 class="text-2xl font-serif font-bold mb-6 text-center">Opening Hours</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Monday</span>
                            <span>9am - 6pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Tuesday</span>
                            <span>9am - 6pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Wednesday</span>
                            <span>9am - 6pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Thursday</span>
                            <span>9am - 7pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Friday</span>
                            <span>9am - 7pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Saturday</span>
                            <span>9am - 6pm</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-700 pb-2">
                            <span>Sunday</span>
                            <span>12am - 5pm</span>
                        </div>
                    </div>
                </div>

                {/* Map Section - Third on mobile */}
                <div class="order-3 md:order-none md:col-span-3">
                    <h2 class="text-2xl font-serif font-bold mb-6 text-center">Find Us</h2>
                    <div class="w-full h-[300px] md:h-[400px] rounded-lg overflow-hidden">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2442.0276040446793!2d-7.113044223181753!3d52.2610437719946!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4842c7832357be2b%3A0x6a100ea6461b7ac3!2sA-CLASS%20Barbers%20(Turkish%20Barber%20)!5e0!3m2!1sen!2sie!4v1733601698982!5m2!1sen!2sie" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                        ></iframe>
                    </div>
                </div>

                {/* Social Links - Last on mobile */}
                <div class="order-4 md:order-none md:col-span-3 flex flex-col items-center">
                    <h2 class="text-2xl font-serif font-bold mb-6">Follow Us On Socials</h2>
                    <div class="flex gap-6">
                        <a href="https://www.tiktok.com/@aclassturkishbarber?lang=en" class="text-[#c19d65] hover:text-[#d4b684] transition-colors" target="_blank">
                            <Icon name="ic:baseline-tiktok" class="w-8 h-8" />
                        </a>
                        <a href="https://www.instagram.com/aclass_turkish_barbers/?igsh=MWI2aThydHN2M2F0YQ%3D%3D&utm_source=qr" class="text-[#c19d65] hover:text-[#d4b684] transition-colors" target="_blank">
                            <Icon name="mdi:instagram" class="w-8 h-8" />
                        </a>
                        <a href="https://www.facebook.com/Aclassturkishbarbers/" class="text-[#c19d65] hover:text-[#d4b684] transition-colors" target="_blank">
                            <Icon name="mdi:facebook" class="w-8 h-8" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
